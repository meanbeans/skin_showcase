<div class='row'>
  <div class="two columns">
    <ul>
      <li><%= link_to 'Account', settings_url %></li>
      <li><%= link_to 'Password', settings_password_url %></li>
      <li><%= link_to 'Email notifications', '#' %></li>
    </ul>
  </div>
  <div class="ten columns">
    <h1>Password</h1>

    <h2>Change Password</h2>
    <%= form_for @user, url: settings_password_url, method: :put do |f| %>
      <%= f.label :password, 'New password' %>
      <%= f.text_field :password %>
      <%= f.label :password_confirmation, 'New password confirmation' %>
      <%= f.text_field :password_confirmation %>
      <%= f.submit 'Submit' %>
    <% end %>
  </div>
</div>
