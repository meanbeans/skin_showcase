<div class='row'>
  <div class="two columns">
    <ul>
      <li><%= link_to 'Account', settings_url %></li>
      <li><%= link_to 'Password', settings_password_url %></li>
      <li><%= link_to 'Email notifications', '#' %></li>
    </ul>
  </div>
  <div class="ten columns">
    <h1>Password</h1>

    <h2>Change Password</h2>

    <%= render partial: 'layouts/partials/flash', locals: { flash: flash } %>

    <%= form_for current_user, url: settings_password_url, method: :put do |f| %>
      <%= f.label :password, 'New password' %>
      <%= f.password_field :password, class: 'u-full-width' %>
      <%= f.label :password_confirmation, 'New password confirmation' %>
      <%= f.password_field :password_confirmation, class: 'u-full-width' %>
      <%= f.submit 'Submit' %>
    <% end %>
  </div>
</div>
