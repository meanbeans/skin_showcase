<div class='row'>
  <div class="twelve columns">
    <h1>Profile</h1>
    <ul>
      <li><%= current_user.username %></li>
      <li><%= current_user.email %></li>
    </ul>
  </div>
</div>
<div class='row'>
  <div class="twelve columns">
    <h1>Reviews and Ratings</h1>
    <%- @reviews.each do |review| %>
      <%- if review.id %>
        <div class='row'>
          <%= render partial: 'layouts/partials/skin_instance', locals: { skin: review.skin } %>
          <div class='ten columns'>
            <%= render partial: 'layouts/partials/review', locals: { review: review } %>
          </div>
        </div>
      <% end %>
    <% end %>

    <%- @ratings.each do |rating| %>
      <%- if rating.id && !rating.review_id %>

        <div class='row'>
          <%= render partial: 'layouts/partials/skin_instance', locals: { skin: rating.skin } %>

          <div class='ten columns'>
            <div class='static-small-rating-stars'>
              <% rating.score.times do %>
                <div class='static-small-rating-star-empty filled'></div>
              <% end %>
              <% (5 - rating.score).times do %>
                <div class='static-small-rating-star-empty'></div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<div class='row'>
  <div class="twelve columns">
    <h1>Owned Skins</h1>
    <%- @ownits.each_with_index do |ownit, i| %>
      <%- if (i + 1) % 6 == 0 %>
        <div class='row'>
      <% end %>
          <%= render partial: 'layouts/partials/skin_instance', locals: { skin: ownit.skin } %>
      <%- if (i + 1) % 6 == 0 %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<div class='row'>
  <div class="twelve columns">
    <h1>Wanted Skins</h1>
    <%- @wantits.each_with_index do |wantit, i| %>
      <%- if (i + 1) % 6 == 0 %>
        <div class='row'>
      <% end %>
          <%= render partial: 'layouts/partials/skin_instance', locals: { skin: wantit.skin } %>
      <%- if (i + 1) % 6 == 0 %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
