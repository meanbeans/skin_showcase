<h1>Sign up</h1>

<%= form_for @user, url: signup_post_url do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :password %>
  <%= f.email_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.email_field :password_confirmation %>
  <%= f.submit 'Submit' %>
<% end %>
