<div class='row'>
  <div class="twelve columns">
    <h1>Sign in</h1>

    <%= render partial: 'layouts/partials/flash', locals: { flash: flash } %>

    <%= form_for @user, url: signin_post_url do |f| %>
      <%= f.label :username, 'Username or Email' %>
      <%= f.text_field :username_or_email, class: 'u-full-width' %>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'u-full-width' %>

      <div class='row'>
        <div class="six columns">
          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %>
            <span>Remember me on this computer</span>
          <% end %>
        </div>
        <div class="six columns">
          <!-- TODO: Recover password -->
          <p class='text-right'><%= link_to 'Recover password', '#' %></p>
        </div>
      </div>

      <%= f.submit 'Submit' %>
    <% end %>
  </div>
</div>
