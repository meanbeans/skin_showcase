<%- row_size = row_size || 'two' %>

<%- if champion %>
  <div class='<%= row_size %> columns'>
    <div class='row'>
      <div class='twelve columns'>
        <%= link_to image_tag(champion.tile_img_url, alt: champion.name, width: '90%'), champion_path(champion) %>
      </div>
    </div>
    <div class='row'>
      <div class='twelve columns champion-instance-name text-center'>
        <%= link_to champion.name, champion_path(champion) %>
      </div>
    </div>
  </div>
<% end %>
