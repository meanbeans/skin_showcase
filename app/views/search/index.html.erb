<div class='row'>
  <div class="twelve columns">
    <h1>Search</h1>
    <%= form_for @search, url: search_index_path, method: :POST do |f| %>
      <%= f.text_field :content, class: 'u-full-width', value: @query %>
      <%= f.submit 'Submit' %>
    <% end %>
  </div>
</div>

<%- unless @search_result.empty? %>
  <div class='row'>
    <div class="six columns">
      <h2>Champions</h2>

      <%- @search_result[:champions].each_with_index do |champion, i| %>
        <%- if (i + 1) % 3 == 0 %>
          <div class='row'>
        <% end %>
            <%= render partial: 'layouts/partials/champion_instance', locals: { champion: champion, row_size: 'four' } %>
        <%- if (i + 1) % 3 == 0 %>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="six columns">
      <h2>Skins</h2>

      <%- @search_result[:skins].each_with_index do |skin, i| %>
        <%- if (i + 1) % 3 == 0 %>
          <div class='row'>
        <% end %>
            <%= render partial: 'layouts/partials/skin_instance', locals: { skin: skin, row_size: 'four' } %>
        <%- if (i + 1) % 3 == 0 %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
